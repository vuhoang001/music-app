header.header 
    .container 
        .row.align-items-center 
            .col-3 
                .inner-logo 
                    a(href='/')
                        img(src='/images/logo.png', alt='LOGO', style="height: 60px; width: 60px")

            .col-5 
                .box-search 
                    form(
                        action='/search/result'
                        method="GET"
                    )
                        div(class='form-group d-flex mb-0')
                            input(
                                autocomplete='off'
                                type='text'
                                placeholder='Nhập từ khóa...'
                                class='form-control'
                                name='keyword'
                                value=keyword
                            )
                            button(
                                type='submit'
                                class='btn btn-primary'
                            ) Tìm
                    .inner-suggest 
                        .inner-list 
                            a(href='/song/detail/:slugSong' class='inner-item')
                                .inner-image 
                                    img(src='https://backend.daca.vn/assets/images/cat-doi-noi-sau.jpg')
                                .inner-info 
                                    .inner-title Cắt đôi nỗi sầu 
                                    .inner-singer Tăng Duy Tân 
            .col-4
                .inner-menu 
                    ul 
                        li 
                            a(href="/") Trang chủ 
                        li 
                            a(href="/topics") Chủ đề       
                        li 
                            a(href='/favorite-songs') Yêu thích             